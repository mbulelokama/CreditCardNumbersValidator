@model IEnumerable<CreditCardNumbersValidator.Models.CreditCard>

@{
    ViewData["Title"] = "Index";
}
<br />
<div class="form-group modal-xl">
    <p class="btn btn-warning btn-lg btn-block trigger-btn"><a asp-action="Create"> Click here to validate a new credit card number </a></p>
</div>
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Important Alert!!!... </strong>@TempData["AlertMessage"]
    </div>
}
<table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.CardNumber)</th>
            <th>@Html.DisplayNameFor(model => model.CreditCardType)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="d-flex align-items-center">
                        @Html.DisplayFor(modelItem => item.CardNumber)
                    </div>
                </td>
                <td>
                    <span class="badge badge-success rounded-pill d-inline"> @Html.DisplayFor(modelItem => item.CreditCardType)</span>
                </td>
            </tr>
        }
    </tbody>
</table>

